 <%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/css/product.css" />
  </head>

  <body>
    <%- include('../includes/navigation.ejs') %>

    <main>
      <% if(products.length > 0) { %>
        <% if(length === 1)  { %>
        <div class="product__description">
           <h2><%= length %> Book Found</h2>
        </div>
        <% } else { %>
        <div class="product__description">
           <h2><%= length %> Books Found</h2>
        </div>
        <% } %>
      <div class="grid">
        <% for(let product of products) { %>
        <article class="card product-item">
          <header class="card__header">
            <h1 class="product__title"><%= product.title %></h1>
          </header>
          <div class="card__image">
          <img
            src="data:image/png;base64,<%= product.cover %>"
            alt="<%= product.title %>"
          />
        </div>
          <div class="card__content">
            <h2 class="product__author"><%= product.author %></h2>
          </div>
          <div class="card__actions">
            <a href='/books/<%= product._id %>' class="btn">View More</a>
            <a href='login' class="btn">Request Exchange</a>
          </div>
        </article>
        <% } %>
        <% } else if (query === "") { %>
        <h1>Please provide a vaild search query</h1>
      </div>
      <% } else { %>
      <h1>No Books Found</h1>
      <% } %>
     
      
    </main>
    <%- include('../includes/searchhomePagination.ejs', {currentPage: currentPage, nextPage: nextPage, previousPage: previousPage, lastPage: lastPage, hasNextPage: hasNextPage, hasPreviousPage: hasPreviousPage , query:query}) %>
    <script src="/js/searchhomePagination.js"></script>


 <%- include('../includes/end.ejs') %>
