<%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/css/forms.css">
    <link rel="stylesheet" href="/css/product.css">
</head>

<body>
   <%- include('../includes/displaybooks.ejs') %>
     <div class="back__link">
       <a href='/userbooks' class="btn">Back</a>
     </div>
    <main>
        <form class="product-form" action="/<% if(editing) { %>edit-book<% } else { %>add-books<% } %>" method="POST"  enctype="multipart/form-data">
            <div class="my-form-class">
                <div class="form-control">
                    <label for="title">Title</label>
                    <input type="text" name="title" id="title" value="<% if (editing) { %><%= product.title %><% } %>">
                </div>
                <div class="form-control">
                    <label for="cover">Upload Book's Cover Page</label>
                    <input type="file" name="cover" id="cover" value="<% if (editing) { %><%= product.cover %><% } %>">
                    <small>(To see the condition of your book)
                    </small>
                </div>
    
                
                <div class="form-control">
                    <label for="author">Author</label>
                    <input type="text" name="author" id="author" value="<% if (editing) { %><%= product.author %><% } %>">
                </div>
               <div class="form-control">
                    <label for="genre">Genre</label>
                    <input type="text" name="genre" id="genre" value="<% if (editing) { %><%= product.genre %><% } %>">
                </div>
                <div class="form-control">
                    <label for="purchased_year">Purchased Year</label>
                    <input type="text" name="purchased_year" id="purchased_year" value="<% if (editing) { %><%= product.purchased_year %><% } %>">
                </div>
            </div>

            <% if (editing) { %>
                <input type="hidden" value="<%= product._id %>" name="productId">
            <% } %>

            <button class="card__actions button" type="submit"><% if (editing) { %>Update Book<% } else { %>Add Book<% } %></button>
        </form>
    </main>
<%- include('../includes/end.ejs') %>